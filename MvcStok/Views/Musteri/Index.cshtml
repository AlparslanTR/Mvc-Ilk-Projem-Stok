@using MvcStok.Models.Entity
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
            {
                 <p>
                     Aranacak Müşteri Adı: @Html.TextBox("p")
                     <input type="submit"value="Ara" />
                 </p>
            }
<table class="table table-bordered">
    <tr>
        <th>Müşteri ID</th>
        <th>Müşteri Ad Soyad</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var musteri in Model)
        {
            <tr>
                <td>@musteri.MusteriID</td>
                <td>@musteri.AdSoyad</td>
                <td><a href="/Musteri/Sil/@musteri.MusteriID" class="btn btn-danger" onclick="return confirm ('Silmek İstediğinize Emin misiniz ?')">Sil</a></td>
                <td><a href="/Musteri/MusteriGetir/@musteri.MusteriID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Müşteri Ekle</a>



