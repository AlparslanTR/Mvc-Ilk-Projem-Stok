@using MvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Kategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    <tbody>
        @foreach(var ktg in Model)
            {
        <tr>
            <td>@ktg.KategoriID</td>
            <td>@ktg.Ad</td>
            <td><a href="/Kategori/Sil/@ktg.KategoriID" class="btn btn-danger" onclick="return confirm ('Silmek İstediğinize Emin misiniz ?')">Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@ktg.KategoriID"class="btn btn-success">Güncelle</a></td>
        </tr>
            }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new { sayfa })) 
<a href="/Kategori/YeniKategori/" class="btn btn-primary">Yeni Kategori Ekle</a>

